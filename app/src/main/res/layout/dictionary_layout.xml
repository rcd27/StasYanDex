<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_dictionary_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="здарова" />

        <TextView
            android:id="@+id/tv_dictionary_pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
            app:layout_constraintLeft_toLeftOf="@+id/tv_dictionary_word"
            app:layout_constraintTop_toBottomOf="@+id/tv_dictionary_word"
            tools:text="сущ" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dictionary_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_dictionary_pos"
            app:layout_goneMarginStart="0dp" />
    <Button
        android:id="@+id/bt_get_dictionary"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="Словарь"
        app:layout_constraintLeft_toRightOf="@+id/tv_dictionary_word"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/tv_dictionary_word"
        android:layout_marginTop="0dp" />
    </android.support.constraint.ConstraintLayout>


</FrameLayout>